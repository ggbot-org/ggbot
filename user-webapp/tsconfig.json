{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "_api/*": ["pages/api/*"],
      "_classNames": ["src/styles/classNames.ts"],
      "_components/*": ["src/components/*"],
      "_contexts/*": ["src/contexts/*"],
      "_flow/*": ["src/flow/*"],
      "_i18n": ["src/i18n/index.ts"],
      "_layouts/*": ["src/layouts/*"],
      "_hooks/*": ["src/hooks/*"],
      "_pages/*": ["src/pages/*"],
      "_routing/*": ["src/routing/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "extends": "@ggbot2/tsconfig",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
