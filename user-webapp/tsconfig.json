{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "_api/*": ["pages/api/*"],
      "_components": ["components/index.ts"],
      "_contexts": ["contexts/index.ts"],
      "_flow/*": ["flow/*"],
      "_hooks": ["hooks/index.ts"],
      "_screens": ["screens/index.ts"],
      "_routing": ["routing/index.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "extends": "../tsconfig.common.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
