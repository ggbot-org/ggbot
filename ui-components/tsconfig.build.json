{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2015"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
