{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "_api/*": ["pages/api/*"],
      "_components": ["components/index.ts"],
      "_hooks": ["hooks/index.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "extends": "../tsconfig.common.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
