{
  "name": "@ggbot2/ui-components",
  "version": "0.0.0",
  "private": true,
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "style": "./dist/style.css",
      "types": "./dist/index.d.ts"
    },
    "./tailwind.theme": {
      "require": "./tailwind.theme.js"
    }
  },
  "scripts": {
    "build": "npm run tsc--build; npm run tailwindcss",
    "dev": "next dev",
    "lint": "next lint",
    "tailwindcss": "tailwindcss --config ./tailwind.build.js --minify --input ./src/tailwind.css --output ./dist/style.css",
    "test": "npm run tsc--noEmit; npm run lint",
    "tsc--build": "tsc --build tsconfig.build.json",
    "tsc--noEmit": "tsc --noEmit --project tsconfig.json"
  },
  "dependencies": {
    "@ggbot2/time": "file:time"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.20.0",
    "eslint-config-next": "^12.2.2",
    "next": "^12.2.2",
    "postcss": "^8.4.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4"
  }
}
