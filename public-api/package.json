{
  "name": "@ggbot2/public-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run tsc:build && npm run zip",
    "check_types": "tsc --noEmit --project .",
    "cleanup": "rm -rf dist/ temp/",
    "create": "sh src/scripts/create.sh",
    "deploy": "sh src/scripts/deploy.sh",
    "lint": "eslint --fix --ext .ts .",
    "prebuild": "npm run cleanup",
    "precreate": "npm run build",
    "predeploy": "npm run build",
    "tsc:build": "tsc --build tsconfig.build.json",
    "zip": "sh src/scripts/zip.sh"
  },
  "dependencies": {
    "@ggbot2/api": "file:api",
    "@ggbot2/api-gateway": "file:api-gateway",
    "@ggbot2/database": "file:database",
    "@ggbot2/models": "file:models"
  },
  "devDependencies": {
    "@ggbot2/eslint-config": "file:eslint-config",
    "@ggbot2/tsconfig": "file:tsconfig"
  },
  "eslintConfig": {
    "extends": [
      "@ggbot2/eslint-config"
    ],
    "ignorePatterns": [
      "dist/",
      "temp/"
    ]
  }
}
