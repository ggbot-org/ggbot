{
	"compilerOptions": {
		"composite": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"_/binance/*": ["./src/binance/*"],
			"_/classNames": ["./src/styles/classNames.ts"],
			"_/components/library": ["./src/components/library/index.ts"],
			"_/components/*": ["./src/components/*"],
			"_/contexts/*": ["./src/contexts/*"],
			"_/flow/*": ["./src/flow/*"],
			"_/hooks/*": ["./src/hooks/*"],
			"_/i18n/*": ["./src/i18n/*"],
			"_/logging": ["./src/logging.ts"],
			"_/pages/*": ["./src/pages/*"],
			"_/react/mount": ["./src/react/mount.tsx"],
			"_/routing/*": ["./src/routing/*"],
			"_/storages/*": ["./src/storages/*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"tsBuildInfoFile": "temp/tsconfig.react.tsbuildinfo",
		"useDefineForClassFields": true
	},
	"exclude": ["node_modules", "src/workers/"],
	"include": ["**/*.ts", "**/*.tsx"]
}
