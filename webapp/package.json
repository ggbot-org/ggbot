{
  "name": "@workspace/webapp",
  "description": "is the product web application",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run compile_translations && npm run copy_js_modules && npm run generate_seo_files && npm run generate_html && npm run generate_js && npm run generate_css",
    "check_types": "npm run check_types:webapp && npm run check_types:scripts",
    "check_types:scripts": "tsc --noEmit --project ./tsconfig.scripts.json",
    "check_types:webapp": "tsc --noEmit --project ./tsconfig.json",
    "cleanup": "rm -rf temp/ public/main.css public/sitemap.xml public/*.js public/*.html public/admin/ public/design/ public/modules/ public/translations/ public/user/ public/workers/",
    "compile_translations": "npm run formatjs:compile:en",
    "copy_js_modules": "node temp/scripts/copy_js_modules.js",
    "deploy": "sh src/scripts/deploy.sh",
    "formatjs:compile:en": "formatjs compile translations/en.json --ast --out-file public/translations/en.json",
    "generate_css": "npm run sass",
    "generate_formatjs_types": "node temp/scripts/generate_formatjs_types.js",
    "generate_html": "node temp/scripts/generate_html.js",
    "generate_js": "node temp/scripts/generate_js.js",
    "generate_seo_files": "node temp/scripts/generate_seo_files.js",
    "postcompile_translations": "npm run generate_formatjs_types",
    "precheck_types": "npm run generate_formatjs_types",
    "pregenerate_formatjs_types": "npm run tsc:scripts",
    "pregenerate_public_files": "npm run tsc:scripts",
    "sass": "sass --style=compressed --load-path=../node_modules/ --no-source-map src/styles/main.scss public/main.css",
    "server": "npm run build && esbuild --servedir=public",
    "start": "onchange --initial --kill 'translations/*.json' 'src/components/' 'src/contexts/' 'src/flow/' 'src/hooks/' 'src/i18n/' 'src/pages/' 'src/routing/' 'src/storages/' 'src/styles/' -- npm run server",
    "tsc:scripts": "tsc --build tsconfig.scripts.json"
  },
  "dependencies": {
    "@workspace/api": "0.0.0",
    "@workspace/backtesting": "0.0.0",
    "@workspace/backtesting-webworker": "0.0.0",
    "@workspace/binance": "0.0.0",
    "@workspace/cache": "0.0.0",
    "@workspace/dflow": "0.0.0",
    "@workspace/indexeddb-binance": "0.0.0",
    "@workspace/locators": "0.0.0",
    "@workspace/models": "0.0.0",
    "@workspace/webstorage": "0.0.0",
    "bulma": "1.0.2",
    "flow-view": "6.0.1",
    "minimal-time-helpers": "0.1.0",
    "minimal-type-guard-helpers": "0.2.0",
    "preact": "10.25.0",
    "trunx": "1.1.0"
  },
  "devDependencies": {
    "@formatjs/cli": "6.2.12",
    "@types/react-dom": "18.3.0",
    "@workspace/env": "0.0.0",
    "@workspace/tsconfig": "0.0.0",
    "onchange": "7.1.0",
    "sass": "1.78.0",
    "stylelint": "16.9.0",
    "stylelint-config-standard-scss": "13.1.0"
  }
}
