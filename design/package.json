{
  "name": "@ggbot2/design",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run tsc:build",
    "check_types": "tsc --noEmit --project .",
    "cleanup": "rm -rf dist/ temp/",
    "generate_css": "npm run sass",
    "generate_html": "node temp/scripts/generate_html.js",
    "generate_js": "node temp/scripts/generate_js.js",
    "generate_public_files": "npm run generate_html && npm run generate_js && npm run generate_css",
    "lint": "eslint --fix --ext .ts --ext .tsx src/",
    "pregenerate_public_files": "npm run tsc:scripts",
    "sass": "sass --style=compressed --load-path=../node_modules/ --load-path=. --no-source-map src/webapp/styles/main.scss public/main.css",
    "server": "npm run build && npm run generate_public_files && esbuild --servedir=public",
    "start": "onchange --initial --kill 'src/' 'styles/' -- npm run server",
    "tsc:build": "tsc --build tsconfig.build.json",
    "tsc:scripts": "tsc --build tsconfig.scripts.json"
  },
  "dependencies": {
    "@ggbot2/react": "file:react",
    "minimal-time-helpers": "0.1.0",
    "react": "18.2.0",
    "react-intl": "6.4.4",
    "trunx": "0.45.3"
  },
  "devDependencies": {
    "@ggbot2/esbuild": "file:esbuild",
    "@ggbot2/eslint-config": "file:eslint-config",
    "@ggbot2/html": "file:html",
    "@ggbot2/repo": "file:repo",
    "@ggbot2/tsconfig": "file:tsconfig",
    "sass": "1.64.2"
  },
  "eslintConfig": {
    "extends": [
      "@ggbot2/eslint-config/react"
    ],
    "rules": {
      "formatjs/no-literal-string-in-jsx": "off"
    }
  }
}
