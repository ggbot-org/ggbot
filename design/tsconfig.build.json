{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2015"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "./src/package.ts",
    "./src/scripts",
    "./src/examples",
    "./src/pages"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
