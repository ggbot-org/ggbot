{
	"compilerOptions": {
		// This option is replaced by enabling no-unreachable in ESLint config
		// "allowUnreachableCode": false,
		"declaration": true,
		"declarationMap": false,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": false,
		"noErrorTruncation": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitThis": true,
		"outDir": "${configDir}/dist",
		"rootDir": "${configDir}/src",
		"skipLibCheck": true,
		"strict": true,
		"target": "es2022",
		"tsBuildInfoFile": "${configDir}/dist/tsconfig.tsbuildinfo",
		"useDefineForClassFields": true
		// These options are replaced by enabling @typescript-eslint/no-unused-vars in ESLint config.
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
	},
	"include": ["${configDir}/src"]
}
