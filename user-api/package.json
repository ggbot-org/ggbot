{
  "name": "@workspace/user-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run tsc:build && npm run zip",
    "check_types": "tsc --noEmit --project .",
    "cleanup": "rm -rf dist/ temp/",
    "create": "sh src/scripts/create.sh",
    "deploy": "sh src/scripts/deploy.sh",
    "lint": "eslint --fix --ext .ts src/",
    "prebuild": "npm run cleanup",
    "precreate": "npm run build",
    "predeploy": "npm run build",
    "set_environment": "sh src/scripts/set_environment.sh",
    "set_memory_size": "sh src/scripts/set_memory_size.sh",
    "set_timeout": "sh src/scripts/set_timeout.sh",
    "tsc:build": "tsc --build tsconfig.build.json",
    "zip": "sh src/scripts/zip.sh"
  },
  "dependencies": {
    "@workspace/api": "file:api",
    "@workspace/env": "file:env",
    "@workspace/logging": "file:logging",
    "@workspace/api-gateway": "file:api-gateway",
    "@workspace/authentication": "file:authentication",
    "@workspace/database": "file:database",
    "@workspace/models": "file:models"
  },
  "devDependencies": {
    "@workspace/eslint-config": "file:eslint-config",
    "@workspace/tsconfig": "file:tsconfig"
  },
  "eslintConfig": {
    "extends": [
      "@workspace/eslint-config"
    ]
  }
}
